<section class="new_post_section">
    <h2>New Post</h2>
    <%= form_with model: @post, url: user_posts_path do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title, required: true %>
    </div>
    <div>
        <%= form.label :text %><br>
        <%= form.text_area :text, required: true %>
    </div>
    <%= form.submit "Create Post" %>
    <%end%>
</section>